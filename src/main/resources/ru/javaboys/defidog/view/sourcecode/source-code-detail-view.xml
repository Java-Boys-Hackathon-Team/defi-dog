<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://sourceCodeDetailView.title"
      focusComponent="sourceCodeForm">
    <data>
        <instance id="sourceCodeDc"
                  class="ru.javaboys.defidog.entity.SourceCode">
            <fetchPlan extends="_base"/>
            <loader id="sourceCodeDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="sourceCodeForm" dataContainer="sourceCodeDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <select id="sourceTypeField" property="sourceType"/>
            <textField id="repoUrlField" property="repoUrl"/>
            <textField id="branchField" property="branch"/>
            <textField id="localPathField" property="localPath"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
